<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".ui.exit.ExitFragment">

    <ImageView
        android:id="@+id/header"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp"
        android:src="@drawable/headerlogo" />

    <TextView
        android:id="@+id/accountheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_bold"
        android:layout_centerHorizontal="true"
        android:text="MY ACCOUNT"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/header"/>

    <TextView
        android:id="@+id/txtname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accountheader"
        android:layout_alignLeft="@+id/email"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/lato_regular"
        android:letterSpacing=".15"
        android:text="NAME *"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/profile"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:fontFamily="@font/lato_regular"
        android:layout_below="@+id/txtname"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/txtemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile"
        android:layout_alignLeft="@+id/email"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/lato_regular"
        android:letterSpacing=".15"
        android:text="EMAIL *"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <EditText
        android:inputType="textEmailAddress"
        android:id="@+id/email"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtemail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_background"
        android:fontFamily="@font/lato_regular"
        android:padding="5dp" />

    <TextView
        android:id="@+id/txtmobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_alignLeft="@+id/mobile"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/lato_regular"
        android:letterSpacing=".15"
        android:text="MOBILE *"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/mobile"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtmobile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_background"
        android:fontFamily="@font/lato_regular"
        android:inputType="phone"
        android:padding="5dp" />

    <TextView
        android:id="@+id/txtaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mobile"
        android:layout_alignLeft="@+id/address"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/lato_regular"
        android:letterSpacing=".15"
        android:text="ADDRESS *"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/address"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:fontFamily="@font/lato_regular"
        android:layout_below="@+id/txtaddress"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/update"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/address"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/signupbtn"
        android:fontFamily="@font/lato_regular"
        android:text="Update"
        android:textColor="@color/white"
        android:textSize="16sp" />


</RelativeLayout>