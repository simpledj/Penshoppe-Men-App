<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".RegistrationActivity">

    <RelativeLayout
        android:id="@+id/centerhorizontalline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <RelativeLayout
        android:id="@+id/centerverticalline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/signupheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/lato_bold"
        android:text="CREATE ACCOUNT"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/name"
        android:text="NAME *"
        android:textSize="14sp"
        android:layout_below="@+id/signupheader"
        android:textColor="@color/black"
        android:fontFamily="@font/lato_regular"
        android:layout_marginTop="30dp"
        android:letterSpacing=".15"/>

    <EditText
        android:id="@+id/name"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:layout_below="@+id/txtname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_background"
        android:fontFamily="@font/lato_regular"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/txtemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/emailreg"
        android:text="EMAIL *"
        android:textSize="14sp"
        android:layout_below="@+id/name"
        android:textColor="@color/black"
        android:fontFamily="@font/lato_regular"
        android:layout_marginTop="20dp"
        android:letterSpacing=".15"/>

    <EditText
        android:id="@+id/emailreg"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:layout_below="@+id/txtemail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_background"
        android:drawablePadding="10dp"
        android:fontFamily="@font/lato_regular"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/txtpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/passwordreg"
        android:text="PASSWORD *"
        android:textSize="14sp"
        android:layout_below="@+id/emailreg"
        android:textColor="@color/black"
        android:fontFamily="@font/lato_regular"
        android:layout_marginTop="20dp"
        android:letterSpacing=".15"/>

    <EditText
        android:id="@+id/passwordreg"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:layout_below="@+id/txtpass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_background"
        android:drawablePadding="10dp"
        android:fontFamily="@font/lato_regular"
        android:inputType="textPassword"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/signup"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passwordreg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/signupbtn"
        android:text="Create account"
        android:fontFamily="@font/lato_regular"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/txtbelow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signup"
            android:text="Already Have An Account?"
            android:fontFamily="@font/lato_regular"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/gotosignin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:textStyle="bold"
            android:fontFamily="@font/lato_regular"
            android:layout_marginStart="5dp"
            android:textColor="#f01737"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtbelow"
        android:layout_centerHorizontal="true"
        android:scaleY=".5"
        android:scaleX=".5" />


</RelativeLayout>